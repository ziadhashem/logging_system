{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="row" style="height:100px;"></div>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="card border-info" style="max-width: 500px;">
        <div class="card-header"> <h3>Register</h3></div>
        <div class="card-body">
            {{ form_start(registrationForm) }}
            <div>
               <label  class="form-label">{{  form_label(registrationForm.email) }}</label>
               <div >
                   {{ form_widget(registrationForm.email) }}
                   {{ form_errors(registrationForm.email) }}
               </div>
           </div>
            <br>
            <div>
                <label  class="form-label">{{  form_label(registrationForm.plainPassword) }}</label>
                <div >
                    {{ form_widget(registrationForm.plainPassword) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>
            </div>
            <br>
            <div>
                <label  class="form-label">{{  form_label(registrationForm.agreeTerms) }}</label>
                <div >
                    {{ form_widget(registrationForm.agreeTerms) }}
                </div>
            </div>


            {{ form_errors(registrationForm) }}


            <br>
            <button type="submit"  class="btn btn-lg btn-primary">Register</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
    </div>
    <div class="col-md-4"></div>

{% endblock %}
